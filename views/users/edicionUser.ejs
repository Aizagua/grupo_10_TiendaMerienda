            <input class = bloquestext-registro class = bloquestext-registro type = "password" name = "clave"  disabled>
            </p>
            <p class = boton-registro>
            <button class = botontexto-registro type = "submit"> Editar </button>
            </p>
        </form> 
    </main>
    <%- include("../partials/footer") %>

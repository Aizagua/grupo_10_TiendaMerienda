<!DOCTYPE html>
<html lang="en">
    
<%- include("../partials/head") %>

<body>
    
<%- include("../partials/header") %>
    
    <% if (locals.errores) { %>
        <div>
        <% for (let error in errores) { %>
            <p><%= errores[error].msg %></p>
        <% } %>
        </div>
    <% } %>

    <main id="formulario-inicio" >
        <form class="formularios-login" method="POST" action="/products" enctype="multipart/form-data">
            <h3 class="iniciartextologin">Agregar Producto</h3>

            <div class="bloquesdellogin">
                <input class="textodelogin" type="text" name="nombre" value="<%= locals.oldData ? oldData.nombre : null %>" placeholder="nombre"> 
            </div>
            <div class="bloquesdellogin">
                <input class="textodelogin" type="number" name="precio" value="<%= locals.oldData ? oldData.precio : null %>" placeholder="precio">
            </div>
            <div class="bloquesdellogin">
                <input class="textodelogin" type="text" name="cantidad" value="<%= locals.oldData ? oldData.cantidad : null %>" placeholder="cantidad">
            </div>
            <div class="bloquesdellogin">
                <input class="textodelogin" type="text" name="codigo" value="<%= locals.oldData ? oldData.codigo : null %>" placeholder="codigo">
            </div>
            </div>
            <div class="bloquesdellogin">
                <input class="textodelogin" type="text" name="descripcion" value="<%= locals.oldData ? oldData.descripcion : null %>" placeholder="descripcion">
            </div>
            <div class="bloquesdellogin">
                <input class="textodelogin" type="number" name="id_productoCat" placeholder="categoria">
            </div>
            <div class="bloquesdellogin">
                <textarea class="bloquesdellogin" name="desc2" placeholder="Mas Informacion"></textarea>
            </div>
            <div class="bloquesdellogin">
                <input class="textodelogin" type="file" name="imagen" placeholder="img">
            </div>
            <div class="bloquesdellogin-send">
                <a href="/"><button class="botonform botonsend" type="submit">Enviar</button></a>
            </div>
        </form>
    </main>
    <%- include("../partials/footer") %>
  </body>
  
  </html>
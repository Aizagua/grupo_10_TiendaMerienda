<!DOCTYPE html>
<html lang="en">
    
<%- include("../partials/head") %>
<body>
    
    <%- include("../partials/header") %>
    
        <main>
            <div class="productos">
                <% for (let i = 0; i < listaProductos.length; i++) { %>
                    
                    <div class="productos-rec">
                        <a href="/detail/<%= listaProductos[i].id %>">
                            
                           <img src="/images/<%= listaProductos[i].imagen %>" class="productos-img"> 
                        </a>
                        <h4>
                            <a href="/detail/<%= listaProductos[i].id %>">
                                <%= listaProductos[i].nombre %>
                            </a>
                        </h4>
                        <div class="flex"><div><p><%= listaProductos[i].precio %>$</p></div></div>
                        
                    </div>
                <% }; %>
            </div>
            
        </main>
            <%- include("../partials/footer") %>
        </body>
        
        </html>